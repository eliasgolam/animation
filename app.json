{
  "expo": {
    "name": "Siri Animation Test",
    "slug": "siri-animation-test",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Diese App benötigt Zugriff auf das Mikrofon für die Audioaufnahme und Amplitudenanalyse."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#000000"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Diese App benötigt Zugriff auf das Mikrofon für die Audioaufnahme."
        }
      ]
    ]
  }
} 