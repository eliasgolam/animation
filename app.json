{
  "expo": {
    "name": "Siri Animation Test",
    "slug": "siri-animation-test",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "sdkVersion": "53.0.0",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Diese App benötigt Zugriff auf das Mikrofon für die Audioaufnahme und Amplitudenanalyse."
      },
      "bundleIdentifier": "com.anonymous.sirianimationtest"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#000000"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.anonymous.sirianimationtest"
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-dev-client",
      [
        "expo-av",
        {
          "microphonePermission": "Diese App benötigt Zugriff auf das Mikrofon für die Audioaufnahme."
        }
      ],
      "expo-font",
      "expo-audio"
    ]
  }
}
